{
  "name": "snap-doc",
  "version": "0.0.0-development",
  "main": "index.js",
  "author": "Mike North <michael.l.north@gmail.com> (https://mike.works)",
  "license": "BSD-2-Clause",
  "workspaces": [
    "packages/*"
  ],
  "private": true,
  "devDependencies": {
    "@code-to-json/cli": "^0.6.1",
    "@commitlint/cli": "7.2.1",
    "@commitlint/config-conventional": "7.1.2",
    "@commitlint/travis-cli": "7.2.1",
    "@types/chai": "4.1.7",
    "@types/debug": "^0.0.31",
    "@types/execa": "0.9.0",
    "@types/mocha": "5.2.5",
    "chai": "4.2.0",
    "codecov": "3.1.0",
    "debug": "^4.1.1",
    "husky": "1.3.1",
    "json-typescript": "1.1.0",
    "lerna": "3.8.4",
    "mocha-typescript": "1.1.17",
    "mocha": "5.2.0",
    "nyc": "13.1.0",
    "remark-cli": "6.0.1",
    "remark-lint-no-dead-urls": "0.4.1",
    "remark-lint": "6.0.4",
    "remark-preset-lint-markdown-style-guide": "2.1.2",
    "remark-preset-lint-recommended": "3.0.2",
    "remark-validate-links": "7.1.2",
    "scripty": "1.9.0",
    "ts-node": "7.0.1",
    "tslint-config-prettier": "1.17.0",
    "tslint-sonarts": "1.8.0",
    "tslint": "5.12.0",
    "typescript-eslint-parser": "21.0.2",
    "typescript": "3.2.2"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "header-max-length": [
        0,
        "always",
        288
      ]
    }
  },
  "scripts": {
    "publish": "scripty",
    "clean": "scripty",
    "build": "lerna run link && lerna run build",
    "lint": "lerna run lint",
    "test": "lerna run test --concurrency 1",
    "rebuild": "scripty",
    "cli:build": "lerna run build --scope=@snap-doc/cli",
    "cli:run": "lerna exec ./bin/snap-doc --scope=@snap-doc/cli"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/snap-doc/snap-doc.git"
  },
  "husky": {
    "hooks": {
      "commit-msg": "./node_modules/.bin/commitlint -e $HUSKY_GIT_PARAMS"
    }
  },
  "toolchain": {
    "node": "10.12.0",
    "yarn": "1.10.0"
  }
}

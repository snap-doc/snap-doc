{
  "name": "snap-doc",
  "version": "0.0.0-development",
  "main": "index.js",
  "author": "Mike North <michael.l.north@gmail.com> (https://mike.works)",
  "license": "BSD-2-Clause",
  "workspaces": [
    "packages/*"
  ],
  "private": true,
  "devDependencies": {
    "@commitlint/cli": "7.2.1",
    "@commitlint/config-conventional": "7.1.2",
    "@commitlint/travis-cli": "7.2.1",
    "husky": "1.3.1",
    "lerna": "3.8.4",
    "nyc": "13.1.0",
    "scripty": "1.9.0",
    "typescript": "3.2.2"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "header-max-length": [
        0,
        "always",
        288
      ]
    }
  },
  "scripts": {
    "publish": "scripty",
    "clean": "scripty",
    "build": "lerna run link && lerna run build",
    "lint": "lerna run lint",
    "test": "lerna run test --concurrency 1",
    "rebuild": "scripty",
    "cli:build": "lerna run build --scope=@snap-doc/cli",
    "cli:run": "lerna exec ./bin/snap-doc --scope=@snap-doc/cli"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/snap-doc/snap-doc.git"
  },
  "husky": {
    "hooks": {
      "commit-msg": "./node_modules/.bin/commitlint -e $HUSKY_GIT_PARAMS"
    }
  },
  "toolchain": {
    "node": "10.12.0",
    "yarn": "1.10.0"
  }
}

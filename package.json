{
  "name": "snap-doc",
  "version": "0.0.0-development",
  "main": "index.js",
  "author": "Mike North <michael.l.north@gmail.com> (https://mike.works)",
  "license": "BSD-2-Clause",
  "workspaces": [
    "packages/*"
  ],
  "private": true,
  "devDependencies": {
    "@commitlint/cli": "7.5.0",
    "@commitlint/config-conventional": "7.5.0",
    "@commitlint/travis-cli": "7.5.0",
    "babel-eslint": "10.0.1",
    "codecov": "3.1.0",
    "concurrently": "4.1.0",
    "cross-env": "5.2.0",
    "husky": "1.3.1",
    "lerna": "3.10.8",
    "remark-cli": "6.0.1",
    "remark-lint": "6.0.4",
    "remark-lint-no-dead-urls": "0.4.1",
    "remark-preset-lint-markdown-style-guide": "2.1.2",
    "remark-preset-lint-recommended": "3.0.2",
    "remark-validate-links": "8.0.0",
    "scripty": "1.9.0",
    "ts-node": "8.0.2",
    "tslint": "5.12.1",
    "tslint-config-prettier": "1.18.0",
    "tslint-sonarts": "1.9.0",
    "typescript": "3.3.1",
    "typescript-eslint-parser": "22.0.0"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "header-max-length": [
        0,
        "always",
        288
      ]
    }
  },
  "scripts": {
    "publish": "scripty",
    "clean": "scripty",
    "build": "lerna run link && lerna run build",
    "build:core": "lerna run link && lerna run build --ignore=@snap-doc/ui-kit --ignore=@snap-doc/app",
    "lint": "lerna run lint --parallel",
    "test": "lerna run test --concurrency 1",
    "test:core": "lerna run test --parallel --ignore=@snap-doc/ui-kit --ignore=@snap-doc/app",
    "rebuild": "scripty",
    "build:watch:core": "scripty",
    "build:watch:all": "scripty",
    "cli:build": "lerna run build --scope=@snap-doc/cli",
    "cli:run": "lerna exec ./bin/snap-doc --scope=@snap-doc/cli",
    "link:code-to-json": "yarn link @code-to-json/core && yarn link @code-to-json/formatter && yarn link @code-to-json/utils && yarn link @code-to-json/utils-ts && yarn link @code-to-json/utils-node"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/snap-doc/snap-doc.git"
  },
  "husky": {
    "hooks": {
      "commit-msg": "./node_modules/.bin/commitlint -e $HUSKY_GIT_PARAMS"
    }
  },
  "toolchain": {
    "node": "10.12.0",
    "yarn": "1.10.0"
  }
}

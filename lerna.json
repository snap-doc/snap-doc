{
  "packages": ["packages/*"],
  "version": "independent",
  "useWorkspaces": true,
  "npmClient": "yarn",
  "command": {
    "publish": {
      "allowBranch": "master",
      "conventionalCommits": true,
      "message": "chore(release): publish new release [skip ci]",
      "ignoreChanges": ["**/__snapshots__/**", "**/test/**", "**/*.md"]
    }
  }
}

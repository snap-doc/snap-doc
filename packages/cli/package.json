{
  "name": "@snap-doc/cli",
  "version": "0.0.0-development",
  "description": "CLI for snap-doc",
  "author": "Mike North <michael.l.north@gmail.com>",
  "homepage": "https://github.com/snap-doc/snap-doc#readme",
  "license": "BSD-2-Clause",
  "main": "index.js",
  "directories": {
    "lib": "lib",
    "test": "__tests__"
  },
  "files": [
    "lib"
  ],
  "bin": "bin/snap-doc",
  "publishConfig": {
    "registry": "https://registry.npmjs.com/"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/snap-doc/snap-doc.git"
  },
  "scripts": {
    "lint": "yarn lint:ts && yarn lint:js && yarn lint:md",
    "lint:ts": "tslint --project .",
    "lint:js": "eslint . --ext js,ts",
    "lint:md": "remark .",
    "test": "mocha",
    "test:coverage": "nyc npm test",
    "codacy:transmit-coverage": "cat coverage/lcov.info | codacy-coverage",
    "clean": "rm -rf ./lib",
    "build": "tsc -b .",
    "rebuild": "npm run clean & npm run build",
    "prepublishOnly": "tsc -b ."
  },
  "bugs": {
    "url": "https://github.com/snap-doc/snap-doc/issues"
  },
  "devDependencies": {
    "@types/chai": "^4.1.7",
    "@types/mocha": "^5.2.5",
    "codecov": "3.1.0",
    "mocha": "^5.2.0",
    "mocha-typescript": "^1.1.17",
    "nyc": "13.1.0",
    "scripty": "1.9.0",
    "tslint": "5.12.0",
    "tslint-config-prettier": "1.17.0",
    "tslint-sonarts": "1.8.0",
    "typescript-eslint-parser": "^21.0.2"
  },
  "dependencies": {}
}

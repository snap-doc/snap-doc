{
  "parser": "typescript-eslint-parser",
  "parserOptions": {
    "ecmaVersion": 2017,
    "sourceType": "module"
  },
  "plugins": ["ember"],
  "extends": ["eslint:recommended", "plugin:ember/recommended"],
  "rules": {},
  "overrides": [
    {
      "files": ["__tests__/*"],
      "env": {
        "node": true,
        "mocha": true
      }
    },
    {
      "files": ["bin/snap-doc"],
      "env": {
        "node": true
      },
      "rules": {
        "global-require": "off",
        "no-var": "off",
        "no-console": "off"
      }
    }
  ]
}
